@code {

    public class PromotionStatus
    {
        public string Name { get; set; } = string.Empty;
        public string Value { get; set; } = string.Empty;
    }



    public List<PromotionStatus> Statuses { get; set; } = new()
    {
        new () { Name = "Active", Value = "Active" },
        new () { Name = "Closed", Value = "Closed" }
    };
    public List<string> Errors { get; set; } = new();
    public DataItem<List<PromotionDto>> PromotionsResponse { get; } = new();
    public List<PromotionDto> PromotionsBackup { get; set; } = new();
    public PromotionDto SelectedPromotion { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {

        await GetPromotions();
    }

    private async Task GetPromotions()
    {
        PromotionsResponse.Loading();
        var response = await PromotionsAppService.GetPromotions();
        if (response.IsSuccess)
        {
            PromotionsResponse.SetData(response.Data!);

            PromotionsBackup = new();
            PromotionsBackup.AddRange(response.Data!);
        }
        else
            PromotionsResponse.Error(new Exception(response.Message));

    }

    bool ValidatePromotion(PromotionDto promotion)
    {
        Errors = new List<string>();

        if (string.IsNullOrEmpty(promotion.PromotionName))
        {
            Errors.Add("promotion name is required");
        }
        if (string.IsNullOrEmpty(promotion.PromotionDescription))
        {
            Errors.Add("promotion description is required");
        }

        if (string.IsNullOrEmpty(promotion.UsageFlag))
        {
            Errors.Add("promotion flag is required");
        }

        if (string.IsNullOrEmpty(promotion.Status))
        {
            Errors.Add("promotion status is required");
        }

        if (promotion.StartDate == DateTime.MinValue || promotion.StartDate == null)
        {
            Errors.Add("promotion start date is required");
        }

        if (promotion.EndDate == DateTime.MinValue || promotion.EndDate == null)
        {
            Errors.Add("promotion end date is required");
        }

        if (promotion.StartDate > promotion.EndDate)
        {
            Errors.Add("start date is greater than end date");
        }

        return !Errors.Any();
    }

    async Task AddRequest(GridCommandEventArgs args)
    {
        try
        {
            var promotion = (PromotionDto)args.Item;

            var isValid = ValidatePromotion(promotion);

            if (!isValid) return;

            var request = new RequestDto<PromotionDto>
                {
                    ActivityForm = (int)ActivityForm.Promotion,
                    NewData = (PromotionDto)args.Item,
                    OldData = promotion.PromotionId > 0 ? PromotionsBackup!.FirstOrDefault(p => p.PromotionId == promotion.PromotionId)! : null!,
                    ActivityType = promotion.PromotionId > 0 ? (int)ActivityType.Edit : (int)ActivityType.Add
                };

            var response = await PromotionsAppService.AddRequest(request);

            if (response.IsSuccess)
            {
                Notification.Show(AlertType.Success, "Add/Update request sent for approval, record is locked until it is approved");
                if (promotion.PromotionId > 0)
                    await GetPromotions();
            }
            else
                Notification.Show(AlertType.Error, response.Message);
        }
        catch (Exception e)
        {
            Notification.Show(AlertType.Error, "something went wrong...please try again");
            Logger.LogError(e, nameof(AddRequest));
        }
    }

    void OpenConfirmationDialog(GridCommandEventArgs args)
    {
        var promotion = (PromotionDto)args.Item;
        SelectedPromotion = promotion;
        ShowConfirmationDig = true;
    }

    public bool ShowConfirmationDig { get; set; }

    async Task DeleteHandler()
    {

        var request = new RequestDto<PromotionDto>
            {
                ActivityForm = (int)ActivityForm.Promotion,
                NewData = SelectedPromotion,
                ActivityType = (int)ActivityType.Delete
            };

        var response = await PromotionsAppService.AddRequest(request);

        if (response.IsSuccess)
        {
            ShowConfirmationDig = false;
            Notification.Show(AlertType.Success, "Add/Update request sent for approval, record is locked until it is approved");
            if (SelectedPromotion.PromotionId > 0)
                await GetPromotions();
        }
        else
            Notification.Show(AlertType.Error, response.Message);

    }

    public int TimeDifferenceInYears { get; set; }
    public int TimeDifferenceInMonths { get; set; }
    public int TimeDifferenceInDays { get; set; }

    private int[] monthDay = new int[12] { 31, -1, 31, 30, 31, 30, 31, 31, 30, 31, 30,
        31 };

    public void GetYearsMonthsDaysDifference(DateTime startDate, DateTime endDate)
    {
        var increment = 0;
        if (startDate.Day > endDate.Day)
        {
            increment = monthDay[startDate.Month - 1];
        }
        if (increment == -1)
        {
            increment = DateTime.IsLeapYear(startDate.Year) ? 29 : 28;
        }
        if (increment != 0)
        {
            TimeDifferenceInDays = (endDate.Day + increment) - startDate.Day;
            increment = 1;
        }
        else
        {
            TimeDifferenceInDays = endDate.Day - startDate.Day;
        }
        if ((startDate.Month + increment) > endDate.Month)
        {
            TimeDifferenceInMonths = (endDate.Month + 12) - (startDate.Month + increment);
            increment = 1;
        }
        else
        {
            TimeDifferenceInMonths = (endDate.Month) - (startDate.Month + increment);
            increment = 0;
        }
        TimeDifferenceInYears = endDate.Year - (startDate.Year + increment);

    }

}


   