                                <Template>

                                    @{
                                        var item = context as PromotionGroupDto;
                                        <H4>@item!.Description</H4>
                                    }

                                </Template>
                                <EditorTemplate>
                                    @{
                                        var item = context as PromotionGroupDto;
                                        <TelerikTextArea @bind-Value="@item!.Description"></TelerikTextArea>
                                    }
                                </EditorTemplate>
                            </GridColumn>

                            <GridColumn Field="@nameof(PromotionGroupDto.IsLocked)" Title="Record Status" Editable="false" OnCellRender="@((e) => e.Class = "col-xl-1 text-center")" HeaderClass="col-xl-1 text-center">
