<DeleteConfirmation DeleteRecord="DeleteHandler" ShowConfirmation="ShowConfirmationDig"></DeleteConfirmation>

@code {

 

    public class GroupsStatus
    {
        public string Name { get; set; } = string.Empty;
        public string Value { get; set; } = string.Empty;
    }
    public List<GroupsStatus> Statuses { get; set; } = new()
    {
        new () { Name = "Active", Value = "Active" },
        new () { Name = "Closed", Value = "Closed" }
    };
    public List<string> Errors { get; set; } = new();
    public List<PromotionDto> Promotions { get; set; } = new();
    public DataItem<List<PromotionGroupDto>> GroupsResponse { get; } = new();
    public List<PromotionGroupDto> GroupsBackup { get; set; } = new();
    public PromotionGroupDto SelectedGroup { get; set; } = new();
    public bool ShowConfirmationDig { get; set; }

    protected override async Task OnInitializedAsync()
    {
        GroupsResponse.Loading();
        await GetPromotions();
        await GetGroups();
    }

    async Task GetPromotions()
    {
        Promotions = (await PromotionsAppService.GetPromotions()).Data!;
    }

    private async Task GetGroups()
    {
        var response = await GroupsAppService.GetGroups();
        if (response.IsSuccess)
        {
            GroupsResponse.SetData(response.Data!);

            GroupsBackup = new();
            GroupsBackup.AddRange(response.Data!);
        }
        else
            GroupsResponse.Error(new Exception(response.Message));

    }

    async Task<bool> ValidateGroup(PromotionGroupDto group)
    {
        Errors = new List<string>();

        if (group.PromotionId == 0)
            Errors.Add("promotion is required");

        if (string.IsNullOrEmpty(group.Description))
            Errors.Add("group description is required");

        if (string.IsNullOrEmpty(group.Status))
            Errors.Add("group status is required");

        var isGroupDescExist = await GroupsAppService.ValidateGroupDesc(group);

        if (isGroupDescExist)
            Errors.Add("group description is duplicated");

        return !Errors.Any();
    }


    void SetGroupPromotionName(PromotionGroupDto group)
    {
        group.PromotionName = Promotions.FirstOrDefault(p => p.PromotionId == group.PromotionId)!.PromotionName;
    }


    async Task AddRequest(GridCommandEventArgs args)
    {
        try
        {
            var group = (PromotionGroupDto)args.Item;

            var isValid = await ValidateGroup(group);

            if (!isValid) return;

            SetGroupPromotionName(group);

            var request = new RequestDto<PromotionGroupDto>
                {
                    ActivityForm = (int)ActivityForm.PromotionGroup,
                    NewData = (PromotionGroupDto)args.Item,
                    OldData = group.GroupID > 0 ? GroupsBackup!.FirstOrDefault(p => p.GroupID == group.GroupID)! : null!,
                    ActivityType = group.GroupID > 0 ? (int)ActivityType.Edit : (int)ActivityType.Add
                };

            var response = await GroupsAppService.AddGroupRequest(request);

            if (response.IsSuccess)
            {
                Notification.Show(AlertType.Success, "Add/Update request sent for approval, record is locked until it is approved");
                if (group.GroupID > 0)
                    await GetGroups();
            }
            else
                Notification.Show(AlertType.Error, response.Message);
        }
        catch (Exception e)
        {
            Notification.Show(AlertType.Error, "something went wrong...please try again");
            Logger.LogError(e, nameof(AddRequest));
        }
    }

    void OpenConfirmationDialog(GridCommandEventArgs args)
    {
        var group = (PromotionGroupDto)args.Item;
        SelectedGroup = group;
        ShowConfirmationDig = true;
    }


    async Task DeleteHandler()
    {

        var request = new RequestDto<PromotionGroupDto>
            {
                ActivityForm = (int)ActivityForm.PromotionGroup,
                NewData = SelectedGroup,
                ActivityType = (int)ActivityType.Delete
            };

        var response = await GroupsAppService.AddGroupRequest(request);

        if (response.IsSuccess)
        {
            ShowConfirmationDig = false;
            Notification.Show(AlertType.Success, "Add/Update request sent for approval, record is locked until it is approved");
            if (SelectedGroup.GroupID > 0)
                await GetGroups();
        }
        else
            Notification.Show(AlertType.Error, response.Message);

    }

}
