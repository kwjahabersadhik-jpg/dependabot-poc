@page "/groups"
@inject IPromotionsAppService PromotionsAppService
@inject IGroupsAppService GroupsAppService
@inject ILogger<Groups> Logger

@inherits ApplicationComponent

<ul style="color:red">
    @foreach (var error in Errors)
    {
        <li>@error</li>
    }
</ul>

@if (!IsAllowTo(Permissions.PromotionGroup.View()))
{
    <AccessDenied />
}
else
{
<div class="main-container">
    <div class="container-fluid">
            <div class="table-header mx-0">
                <Title Text="Groups"></Title>
            </div>
            <div class="kfh-data-table">
                @if (GroupsResponse.Status == DataStatus.Success)
                {
                    <TelerikGrid Data="@GroupsResponse.Data"
                                 EditMode="@GridEditMode.Inline"
                                 Pageable="true"
                                 PageSize="10"
                                 Width="100%"
                                 OnDelete="@OpenConfirmationDialog"
                                 OnCreate="@AddRequest"
                                 OnUpdate="@AddRequest">

