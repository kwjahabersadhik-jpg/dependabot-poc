                                <Template>

                                    @{
                                        var item = context as PromotionGroupDto;
                                        <H4>@item!.GroupID</H4>
                                    }
                                </Template>
                            </GridColumn>


                             <GridColumn Field="@nameof(PromotionGroupDto.PromotionName)" Title="Promotion"  OnCellRender="@((e) => e.Class = "col-xl-2 text-center")" HeaderClass="col-xl-2 text-center">
                                <Template>
                                    @{
                                        var item = context as PromotionGroupDto;
                                        <H4>@item!.PromotionName</H4>
                                        // <H3>@item!.Description</H3>
                                    }
                                </Template>
                                <EditorTemplate>
                                    @{
                                        var item = context as PromotionGroupDto;

                                        <TelerikDropDownList Data="@Promotions"
                                                             TextField="@nameof(PromotionDto.PromotionName)"
                                                             ValueField="@nameof(PromotionDto.PromotionId)"
