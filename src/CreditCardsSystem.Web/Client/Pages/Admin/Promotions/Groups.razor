                                </Template>
                            </GridColumn>

                            <GridColumn Field="@nameof(PromotionGroupDto.Status)" Title="Status" OnCellRender="@((e) => e.Class = "col-xl-1 text-center")" HeaderClass="col-xl-1 text-center">
