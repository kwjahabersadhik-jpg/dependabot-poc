    private async Task GetCards()
    {
        try
        {
            if (!IsAllowTo(Permissions.CreditCards.View()))
                return;

            State.CreditCards.Loading();

            var cards = await CustomerProfileAppService.GetCustomerCards(new()
                {
                    CivilId = CivilId
                });


            if (!cards.IsSuccess)
                throw new Exception(cards.Message);

            State.CreditCards.SetData(cards?.Data!);
            CreditCardSummaryRef.IsLoadedAllCardBalances = false;
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "GetCards");
            State.CreditCards.Error(ex);
        }
        finally
        {
            StateHasChanged();
        }
    }

    private async Task GetStandingOrders()
    {
        try
        {
            State.StandingOrders.Loading();
            var response = await _standingOrderAppService.GetAllStandingOrders(CurrentState?.CurrentCivilId ?? "");
            if (response.IsSuccess)
                State.StandingOrders.SetData(response!.Data!);
            else
                State.StandingOrders.Error(new Exception(response.Message));
        }
        catch (Exception ex)
        {
            State.StandingOrders.Error(ex);
        }
        finally
        {
            StateHasChanged();
        }
