    private async Task BindCustomerProfile(CommonCustomerProfileDetails? customerProfileDetails = null)
    {
        HasPermissionToViewStaffSalary = AuthManager.HasPermission("viewStaffSalary");

        if ((!string.IsNullOrEmpty(CivilId) && State.GenericCustomerProfile.Status == DataStatus.Uninitialized) ||
            (!string.IsNullOrEmpty(CivilId) && CurrentState.GenericCustomerProfile.CivilId != CivilId))
        {
            State.GenericCustomerProfile.Loading();
            CurrentState.GenericCustomerProfile.CivilId = CivilId;

            var customerProfile = await CustomerProfileAppService.GetCustomerProfileMinimal(new() { CivilId = CivilId });
            if (!customerProfile.IsSuccess)
            {
                State.GenericCustomerProfile.Error(new(customerProfile.Message));
                return;
            }

            State.GenericCustomerProfile.SetData(customerProfile.Data ?? new());
            CurrentState.GenericCustomerProfile = State.GenericCustomerProfile.Data!;


            var profile = State.GenericCustomerProfile.Data;

            if (!await IsValidProfile(profile!.CustomerType!, CivilId))
            {
                return;
            }

            if (profile is not null)
            {
                CurrentState.CustomerProfile ??= new();
                CurrentState.CustomerProfile.RimCode = profile.RimCode.ToString();
                CurrentState.CustomerProfile.CustomerType = profile.CustomerType ?? "";
                CurrentState.CustomerProfile.DateOfBirth = profile.BirthDate;
                CurrentState.CustomerProfile.FirstName = profile.FirstName ?? "";
                CurrentState.CustomerProfile.LastName = profile.LastName ?? "";
                CurrentState.GenericCustomerProfile = State.GenericCustomerProfile.Data!;
            }

            CurrentState.CurrentCivilId = CivilId;

            StateHasChanged();

            var tasks = new List<Task>();
            await Task.Run(() =>
            {
                tasks.Add(GetCards());
                tasks.Add(GetStandingOrders());
                tasks.Add(GetCustomerRelationManager(profile));
            });
        }
    }


    private async Task<bool> IsValidProfile(string customerType, string civilId)
    {
        var profileResponse = await CustomerProfileAppService.GetCustomerProfileFromFdRlocalDb(civilId);
        if (!profileResponse.IsSuccess)
        {
            Notification.Failure(profileResponse.Message);
            State?.GenericCustomerProfile.Error(new(profileResponse.Message));
            return false;
        }


        bool isPersonalCivilID = customerType.Trim().Equals("Personal", StringComparison.InvariantCultureIgnoreCase);

        var queryParams = new Dictionary<string, string> { ["civilId"] = civilId.Encode()! };

        if (!isPersonalCivilID)
        {
            NavigateTo("corporate-view", queryParams);
            return false;
        }

        if (profileResponse.Data is null)
        {
            NavigateTo("edit-customer-profile", queryParams);
            return false;
        }

        return true;
    }

    private async Task GetCustomerRelationManager(GenericCustomerProfileDto profile)
    {

        if (profile.CustomerType.Equals("Personal", StringComparison.InvariantCultureIgnoreCase))
            return;

        try
        {
            State.RelationManager.Loading();

            var relationManager = await CustomerProfileAppService.GetCustomerRelationManager(profile.RimNo);

            State.RelationManager.SetData(relationManager!);
            RelationShipManager = MapRelationShipManager();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, nameof(GetCustomerRelationManager));
            State.RelationManager.Error(ex);
        }
        finally
        {
            StateHasChanged();
        }
    }

